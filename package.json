{
  "devDependencies": {
    "asar": "^0.11.0",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "electron": "1.4.1",
    "electron-builder": "6.5.2",
    "electron-localshortcut": "^1.0.0",
    "electron-rebuild": "^1.4.0",
    "fs-jetpack": "^0.9.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "into-stream": "^2.0.1",
    "q": "^1.4.1",
    "redux-devtools": "^3.3.1",
    "rollup": "^0.26.3",
    "rollup-plugin-babel": "^2.6.1",
    "yargs": "^4.2.0"
  },
  "optionalDependencies": {
    "appdmg": "^0.4.5",
    "rcedit": "^0.5.0"
  },
  "build": {
    "category": "public.app-category.productivity",
    "copyright": "Â© 2017, MaidSafe.net Ltd",
    "npmRebuild": false,
    "asar": false,
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 220,
          "type": "file",
          "path": "dist/mac/Beaker Browser.app"
        },
        {
          "x": 50,
          "y": 400,
          "type": "position",
          "path": ".background"
        },
        {
          "x": 150,
          "y": 400,
          "type": "position",
          "path": ".DS_Store"
        },
        {
          "x": 250,
          "y": 400,
          "type": "position",
          "path": ".Trashes"
        },
        {
          "x": 350,
          "y": 400,
          "type": "position",
          "path": ".VolumeIcon.icns"
        }
      ]
    },
    "protocols": {
      "name": "SAFE Network URL",
      "schemes": [
        "safe",
        "safe-auth"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "freebsd"
      ],
      "category": "WebBrowser"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true
    },
    "mac": {
      "target": "dmg"
    }
  },
  "scripts": {
    "postinstall": "cd app && npm install && cd ../ && npm run build-safe-app",
    "build": "gulp build",
    "build-safe-app": "cd ./app/node_modules/beaker-plugin-safe-app && npm i && npm run build",
    "rebuild": "cd app && npm rebuild --runtime=electron --target=1.4.1 --disturl=https://atom.io/download/atom-shell --build-from-source",
    "burnthemall": "rm -Rf ./node_modules ./app/node_modules && npm i && npm run rebuild && npm run pack-authenticator && npm run build && npm run package",
    "package": "node ./scripts/main.js --package",
    "start": "gulp start",
    "watch": "gulp start-watch",
    "pack-authenticator:unix": "sh ./scripts/pack_authenticator.sh",
    "pack-authenticator:windows": "powershell.exe -ExecutionPolicy Bypass -File \".\\scripts\\pack_authenticator.ps1\"",
    "pack-authenticator": "node ./scripts/main.js --authenticator"
  },
  "dependencies": {
    "fs-extra": "^3.0.1",
    "rollup-plugin-async": "^1.1.0"
  }
}
